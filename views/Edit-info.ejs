                <input type="text" value="<%=user.name%>" name="name" id="namein">
                <input disabled type="email" value="<%=user.email%>" name="mail" id="mailin">
                <input type="password" placeholder="password" name="password" id="pass1in">
                <input type="password" placeholder="re-enter password" name="password2" id="pass2in">
                <input type="submit" style="top: 58.5%; left: 51.5%;">
